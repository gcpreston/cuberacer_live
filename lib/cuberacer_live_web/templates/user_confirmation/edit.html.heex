<div class="max-w-sm m-auto my-6">
  <h1 class="text-3xl font-semibold text-center mb-6">Account confirmation</h1>

  <.form :let={_f} for={:user} action={~p"/users/confirm/#{@token}"}>
    <div>
      <%= submit("Confirm my account",
        class:
          "rounded-lg bg-green-400 hover:bg-green-500 active:bg-green-400 border border-green-500 w-full"
      ) %>
    </div>
  </.form>
</div>
